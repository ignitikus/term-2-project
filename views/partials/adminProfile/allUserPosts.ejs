<div class="tab-pane fade" id="all-posts" role="tabpanel" aria-labelledby="all-posts-tab">
   <div class='post-container' style="display: flex;">
      <div class='posts'>
         <% if (message) { %>
            <p id='success'><%= message %></p>
         <% } %>
         <% allPosts.reverse().forEach(({visibility,title,picture,content,tags, authorNickname, relativeTime, _id})=>{%>
               <div class="container single-post-container">
                  <div class="jumbotron post-jumbotron">
                     <div style="display: flex;">
                        <div style="padding-right: 30px;">
                           <% if (picture !== '') { %>
                              <img src="<%=picture%>" alt="<%=title%>" class='post-picture-preview'> 
                              <% } %> 
                           </div>
                           <div> 
                              <form action="/api/admin/delete-post/<%=_id%>?_method=DELETE" method="POST" style="width: auto;" id='delete'>
                                 <button type="submit" class="btn btn-danger btn-sm" style="width: 100%;">Delete this post</button>
                              </form>
                              <div style="display: flex;"> 
                                 <form method="POST" action="/api/admin/update-visibility/<%=_id%>?_method=PUT">
                                    <% if(visibility){ %>
                                       <label> Change Status:</label>
                                       <button type="submit" class="btn btn-success btn-sm">Visible</button>
                                       <% } else { %>
                                          <label> Change Status:</label>
                                          <button type="submit" class="btn btn-warning btn-sm">Hidden</button>
                                          <% } %>
                                       </form>
                                    </div>
                           <h1><%= title %></h1>
                           <p><%= content %></p>
                           <p><%= tags %></p>
                           <p>Posted by <%= authorNickname %> <%= relativeTime %></p>
                        </div>
                     </div>
                  </div>
               </div>
            <%})%> 
         </div>
   </div>
</div>
